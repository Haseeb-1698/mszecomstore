---
import Layout from '../layouts/Layout.astro';
import { Mail, ArrowRight } from 'lucide-react';
---

<Layout title="Sign Up | SubHub">
  <main class="py-24 sm:py-32 px-6">
    <div class="max-w-md mx-auto bg-cream-100 rounded-2xl shadow-soft p-8 sm:p-10">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl font-bold text-charcoal-900 tracking-tighter">Create an Account</h1>
        <p class="mt-4 text-lg text-charcoal-800/80">Get started with SubHub today.</p>
      </div>

      <div class="mt-12">
        <form action="#" method="POST">
          <div class="grid grid-cols-1 gap-y-6">
            <div>
              <label for="name" class="sr-only">Full name</label>
              <input type="text" name="name" id="name" autocomplete="name" required class="block w-full rounded-xl border-cream-400 bg-white px-4 py-3.5 text-charcoal-900 placeholder-charcoal-800/50 focus:border-coral-500 focus:ring-coral-500" placeholder="Enter your full name">
            </div>
            <div>
              <label for="email" class="sr-only">Email address</label>
              <input type="email" name="email" id="email" autocomplete="email" required class="block w-full rounded-xl border-cream-400 bg-white px-4 py-3.5 text-charcoal-900 placeholder-charcoal-800/50 focus:border-coral-500 focus:ring-coral-500" placeholder="Enter your email">
            </div>
            <div>
              <label for="password" class="sr-only">Password</label>
              <input type="password" name="password" id="password" autocomplete="new-password" required class="block w-full rounded-xl border-cream-400 bg-white px-4 py-3.5 text-charcoal-900 placeholder-charcoal-800/50 focus:border-coral-500 focus:ring-coral-500" placeholder="Create a password">
            </div>
          </div>

          <div class="mt-8">
            <button type="submit" class="flex w-full items-center justify-center gap-2 rounded-xl bg-coral-500 px-8 py-3.5 font-medium text-white shadow-soft-light-focus hover:bg-coral-600 focus:outline-none focus:ring-2 focus:ring-coral-500 focus:ring-offset-2">
              <span>Continue with Email</span>
              <ArrowRight className="w-5 h-5" />
            </button>
          </div>
        </form>

        <div class="mt-8 text-center">
          <p class="text-charcoal-800/80">Already have an account? <a href="/login" class="font-medium text-coral-500 hover:text-coral-600">Log in</a></p>
        </div>
      </div>
    </div>
  </main>
</Layout>
