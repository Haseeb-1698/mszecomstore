<!-- filepath: src/pages/login.astro -->
---
import Layout from '../layouts/Layout.astro';
import { LoginForm } from '../components/auth/LoginForm';
---

<Layout title="Login | MSZ Software House">
  <main class="py-24 sm:py-32 px-6 bg-white dark:bg-charcoal-900">
    <div class="max-w-md mx-auto bg-cream-100 dark:bg-charcoal-800 rounded-2xl shadow-soft p-8 sm:p-10 border border-cream-200 dark:border-charcoal-700">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl font-bold text-charcoal-900 dark:text-white tracking-tighter">Welcome Back</h1>
        <p class="mt-4 text-lg text-charcoal-800/80 dark:text-gray-300">Sign in to manage your subscriptions.</p>
      </div>

      <div class="mt-12">
        <LoginForm client:load />
      </div>
    </div>
  </main>
</Layout>