---
import Layout from '../layouts/Layout.astro';
import { Mail, Phone, MapPin } from 'lucide-react';
---

<Layout title="Contact - SubHub">
  <main class="max-w-7xl mx-auto px-6 py-12">
    <div class="text-center mb-16">
      <h1 class="text-4xl sm:text-5xl font-bold text-charcoal-900 tracking-tighter">Get in Touch</h1>
      <p class="mt-4 text-lg text-charcoal-800/80 max-w-2xl mx-auto">
        We'd love to hear from you! Whether you have a question about our services, or anything else, our team is ready to answer all your questions.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-16">
      <div class="bg-cream-100 p-8 rounded-2xl shadow-soft-light">
        <h2 class="text-3xl font-bold text-charcoal-900">Contact Us</h2>
        <form class="mt-8 space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-charcoal-800">Full Name</label>
            <div class="mt-1">
              <input type="text" name="name" id="name" autocomplete="name" class="block w-full rounded-md border-cream-400 shadow-sm focus:border-coral-500 focus:ring-coral-500 sm:text-sm h-12 px-4 bg-white" />
            </div>
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-charcoal-800">Email Address</label>
            <div class="mt-1">
              <input id="email" name="email" type="email" autocomplete="email" class="block w-full rounded-md border-cream-400 shadow-sm focus:border-coral-500 focus:ring-coral-500 sm:text-sm h-12 px-4 bg-white" />
            </div>
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-charcoal-800">Message</label>
            <div class="mt-1">
              <textarea id="message" name="message" rows="4" class="block w-full rounded-md border-cream-400 shadow-sm focus:border-coral-500 focus:ring-coral-500 sm:text-sm p-4 bg-white"></textarea>
            </div>
          </div>
          <div>
            <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-full shadow-sm text-base font-medium text-white bg-coral-500 hover:bg-coral-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-coral-500 transition-all">
              Send Message
            </button>
          </div>
        </form>
      </div>

      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-semibold text-charcoal-900 flex items-center">
            <Mail className="w-6 h-6 mr-3 text-coral-500" />
            Email
          </h3>
          <p class="mt-2 text-charcoal-800/80">
            <a href="mailto:hello@subhub.com" class="hover:text-coral-500">hello@subhub.com</a>
          </p>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-charcoal-900 flex items-center">
            <Phone className="w-6 h-6 mr-3 text-coral-500" />
            Phone
          </h3>
          <p class="mt-2 text-charcoal-800/80">
            +1 (555) 123-4567
          </p>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-charcoal-900 flex items-center">
            <MapPin className="w-6 h-6 mr-3 text-coral-500" />
            Address
          </h3>
          <p class="mt-2 text-charcoal-800/80">
            123 Subscription Lane<br />
            Anytown, USA 12345
          </p>
        </div>
        <div>
            <img src="https://images.unsplash.com/photo-1586769852836-bc069f19e1b6?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Contact Us" class="rounded-2xl shadow-soft-light" />
        </div>
      </div>
    </div>
  </main>
</Layout>
