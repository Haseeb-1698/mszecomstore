---
import Layout from '../layouts/Layout.astro';
import { Mail, Phone, MapPin } from 'lucide-react';
---

<Layout title="Contact - MSZ Software House">
  <main class="bg-white dark:bg-charcoal-900">
    <div class="max-w-7xl mx-auto px-6 py-12">
        <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-charcoal-900 dark:text-white tracking-tighter">Get in Touch</h1>
        <p class="mt-4 text-lg text-charcoal-800/80 dark:text-gray-300 max-w-2xl mx-auto">
            We'd love to hear from you! Whether you have a question about our services, or anything else, our team is ready to answer all your questions.
        </p>
        </div>

        <div class="grid md:grid-cols-2 gap-16">
        <div class="bg-cream-100 dark:bg-charcoal-800 p-8 rounded-2xl shadow-soft-light dark:shadow-soft-dark border border-cream-200 dark:border-charcoal-700">
            <h2 class="text-3xl font-bold text-charcoal-900 dark:text-white">Contact Us</h2>
            <form class="mt-8 space-y-6">
            <div>
                <label for="name" class="block text-sm font-medium text-charcoal-800 dark:text-gray-300">Full Name</label>
                <div class="mt-1">
                <input type="text" name="name" id="name" autocomplete="name" class="block w-full rounded-md border-cream-400 dark:border-charcoal-600 shadow-sm focus:border-coral-500 focus:ring-coral-500 sm:text-sm h-12 px-4 bg-white dark:bg-charcoal-700 dark:text-white" />
                </div>
            </div>
            <div>
                <label for="email" class="block text-sm font-medium text-charcoal-800 dark:text-gray-300">Email Address</label>
                <div class="mt-1">
                <input id="email" name="email" type="email" autocomplete="email" class="block w-full rounded-md border-cream-400 dark:border-charcoal-600 shadow-sm focus:border-coral-500 focus:ring-coral-500 sm:text-sm h-12 px-4 bg-white dark:bg-charcoal-700 dark:text-white" />
                </div>
            </div>
            <div>
                <label for="message" class="block text-sm font-medium text-charcoal-800 dark:text-gray-300">Message</label>
                <div class="mt-1">
                <textarea id="message" name="message" rows="4" class="block w-full rounded-md border-cream-400 dark:border-charcoal-600 shadow-sm focus:border-coral-500 focus:ring-coral-500 sm:text-sm p-4 bg-white dark:bg-charcoal-700 dark:text-white"></textarea>
                </div>
            </div>
            <div>
                <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-full shadow-sm text-base font-medium text-white bg-coral-500 hover:bg-coral-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-coral-500 transition-all">
                Send Message
                </button>
            </div>
            </form>
        </div>

        <div class="space-y-8">
            <div>
            <h3 class="text-xl font-semibold text-charcoal-900 dark:text-white flex items-center">
                <Mail className="w-6 h-6 mr-3 text-coral-500" />
                Email
            </h3>
            <p class="mt-2 text-charcoal-800/80 dark:text-gray-400">
                <a href="mailto:mszsoftwarehouse@gmail.com" class="hover:text-coral-500 dark:hover:text-coral-400">mszsoftwarehouse@gmail.com</a>
            </p>
            </div>
            <div>
            <h3 class="text-xl font-semibold text-charcoal-900 dark:text-white flex items-center">
                <Phone className="w-6 h-6 mr-3 text-coral-500" />
                WhatsApp Support
            </h3>
            <p class="mt-2 text-charcoal-800/80 dark:text-gray-400">
                <a href="https://wa.me/923332040826" class="hover:text-coral-500 dark:hover:text-coral-400">+92 333 2040826</a>
            </p>
            </div>
            <div>
            <h3 class="text-xl font-semibold text-charcoal-900 dark:text-white flex items-center">
                <MapPin className="w-6 h-6 mr-3 text-coral-500" />
                Office Address
            </h3>
            <p class="mt-2 text-charcoal-800/80 dark:text-gray-400">
                202, 2nd floor 27c Sunset lane 1,<br />
                Phase 2 EXT DHA, Karachi South,<br />
                Karachi South, Pakistan
            </p>
            </div>
            <div>
                <h3 class="text-xl font-semibold text-charcoal-900 dark:text-white mb-4">Find Us on Map</h3>
                <div class="rounded-2xl overflow-hidden shadow-soft-light dark:shadow-soft-dark">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3620.1234567890123!2d67.0731!3d24.8607!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjTCsDUxJzM4LjUiTiA2N8KwMDQnMjMuMiJF!5e0!3m2!1sen!2s!4v1234567890123!5m2!1sen!2s&q=202+2nd+floor+27c+Sunset+lane+1+Phase+2+EXT+DHA+Karachi+South"
                        width="100%" 
                        height="300" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade"
                        title="MSZ Software House Location">
                    </iframe>
                </div>
            </div>
        </div>
        </div>
    </div>
  </main>
</Layout>
