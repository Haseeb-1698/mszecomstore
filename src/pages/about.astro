---
import Layout from '../layouts/Layout.astro';

// Force cache invalidation with build timestamp
const buildTime = new Date().toISOString();

const team = [
  {
    name: 'Muhammad Zain',
    role: 'CEO & Co-Founder',
    avatar: 'https://i.pravatar.cc/150?u=muhammad-zain',
  },
  {
    name: 'Fatima Khan',
    role: 'CTO & Co-Founder',
    avatar: 'https://i.pravatar.cc/150?u=fatima-khan',
  },
  {
    name: 'Ahmed Hassan',
    role: 'Lead Developer',
    avatar: 'https://i.pravatar.cc/150?u=ahmed-hassan',
  },
  {
    name: 'Ayesha Ali',
    role: 'UI/UX Designer',
    avatar: 'https://i.pravatar.cc/150?u=ayesha-ali',
  },
];
---

<Layout title="About - MSZ Software House">
  <main class="bg-white dark:bg-charcoal-900">
    <div class="max-w-7xl mx-auto px-6 py-12">
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-charcoal-900 dark:text-white tracking-tighter">About MSZ Software House</h1>
        <p class="mt-4 text-lg text-charcoal-800/80 dark:text-gray-300 max-w-2xl mx-auto">
          We're on a mission to simplify digital solutions and premium subscriptions for businesses and individuals.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-charcoal-900 dark:text-white">Our Story</h2>
          <p class="mt-4 text-charcoal-800/80 dark:text-gray-400">
            MSZ Software House was born out of a passion for creating innovative digital solutions. We specialize in providing premium software services, legal SaaS subscriptions, and custom development solutions that help businesses and individuals achieve their goals efficiently.
          </p>
          <p class="mt-4 text-charcoal-800/80 dark:text-gray-400">
            Our goal is to provide seamless, affordable, and high-quality digital solutions that save you time and money, while giving you access to the best premium tools and services in the market.
          </p>
        </div>
        <div>
          <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Our Story" class="rounded-2xl shadow-soft-light dark:shadow-soft-dark" />
        </div>
      </div>

      <div class="mt-24">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-charcoal-900 dark:text-white tracking-tighter">Meet the Team</h2>
          <p class="mt-4 text-lg text-charcoal-800/80 dark:text-gray-300 max-w-2xl mx-auto">
            We are a passionate team of Pakistani developers, designers, and digital solution experts.
          </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
          {team.map(member => (
            <div class="text-center">
              <img src={member.avatar} alt={member.name} class="w-32 h-32 rounded-full mx-auto mb-4 shadow-soft-light dark:shadow-soft-dark" />
              <h3 class="text-xl font-medium text-charcoal-900 dark:text-white">{member.name}</h3>
              <p class="text-charcoal-800/70 dark:text-gray-400">{member.role}</p>
            </div>
          ))}
        </div>

        <div class="mt-12 p-6 bg-cream-100 dark:bg-charcoal-800 rounded-lg border border-cream-400 dark:border-charcoal-700">
          <p class="text-sm text-charcoal-600 dark:text-gray-400 text-center">
            Â© 2025 MSZ Software House. All rights reserved.<br>
            <span class="text-xs opacity-50">Build: {buildTime}</span>
          </p>
        </div>
      </div>
    </div>
  </main>
</Layout>
