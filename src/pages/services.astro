import ServiceCard from '../components/ServiceCard.astro';

const services = [
  {
    name: 'Netflix',
    description: 'Unlimited movies, TV shows, and more.',
    icon: '/icons/netflix.svg',
    price: 'PKR 1,100/mo',
  },
  {
    name: 'Spotify',
    description: 'Music for everyone.',
    icon: '/icons/spotify.svg',
    price: 'PKR 499/mo',
  },
  {
    name: 'Adobe Creative Cloud',
    description: 'The future of creativity.',
    icon: '/icons/adobe-creative-cloud.svg',
    price: 'PKR 8,500/mo',
  },
  {
    name: 'Microsoft 365',
    description: 'Your productivity cloud.',
    icon: '/icons/microsoft-365.svg',
    price: 'PKR 1,200/mo',
  },
  {
    name: 'Disney+',
    description: 'The best stories in the world, all in one place.',
    icon: '/icons/disney-plus.svg',
    price: 'PKR 1,100/mo',
  },
  {
    name: 'Hulu',
    description: 'Watch TV and movies online.',
    icon: '/icons/hulu.svg',
    price: 'PKR 999/mo',
  },
  {
    name: 'Amazon Prime',
    description: 'Get the best of shopping and entertainment.',
    icon: '/icons/amazon-prime.svg',
    price: 'PKR 1,500/mo',
  },
  {
    name: 'YouTube Premium',
    description: 'Watch your favorite videos without ads.',
    icon: '/icons/youtube-premium.svg',
