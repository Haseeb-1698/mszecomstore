---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import { services } from '../data/services.js';

// Convert services data to match ServiceCard props
const serviceCards = services.map(service => ({
  name: service.name,
  description: service.description,
  icon: service.logo,
  price: service.price,
  slug: service.slug
}));
---

<Layout title="Services - MSZ Software House">
  <main class="bg-white dark:bg-charcoal-900">
    <div class="max-w-7xl mx-auto px-6 py-12">
      <div class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl font-bold text-charcoal-900 dark:text-white tracking-tighter">Our Services</h1>
        <p class="mt-4 text-lg text-charcoal-800/80 dark:text-gray-300 max-w-2xl mx-auto">
          Browse our extensive library of premium subscriptions and find the ones that best suit your needs.
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {serviceCards.map(service => (
          <ServiceCard {...service} />
        ))}
      </div>
    </div>
  </main>
</Layout>
