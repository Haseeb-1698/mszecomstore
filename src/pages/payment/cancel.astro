---
import Layout from '../../layouts/Layout.astro';
import { Button } from '../../components/ui/Button.tsx';
import { Card, CardContent } from '../../components/ui/Card.tsx';
---

<Layout title="Payment Cancelled - MSZ Ecom Store">
  <div class="min-h-screen bg-cream-50 dark:bg-charcoal-900 py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        {/* Cancel Icon */}
        <div class="w-24 h-24 bg-red-500/20 dark:bg-red-400/20 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-12 h-12 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </div>

        {/* Cancel Message */}
        <h1 class="text-4xl md:text-5xl font-bold text-charcoal-800 dark:text-cream-100 mb-4">
          Payment Cancelled
        </h1>
        <p class="text-xl text-charcoal-700 dark:text-cream-300 mb-8">
          Your payment was cancelled. No charges have been made to your account.
        </p>

        {/* Info Card */}
        <Card variant="elevated" className="text-left mb-8">
          <CardContent className="space-y-4 p-6">
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-purple-500 dark:text-purple-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-charcoal-800 dark:text-cream-100 mb-2">What happened?</h3>
                <p class="text-sm text-charcoal-700 dark:text-cream-300 mb-3">
                  The payment process was cancelled before completion. This could be because:
                </p>
                <ul class="space-y-2 text-sm text-charcoal-700 dark:text-cream-300">
                  <li class="flex items-start gap-2">
                    <span class="text-purple-500 mt-0.5">â€¢</span>
                    <span>You chose to cancel the payment</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-purple-500 mt-0.5">â€¢</span>
                    <span>The payment session expired</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-purple-500 mt-0.5">â€¢</span>
                    <span>There was an issue with the payment method</span>
                  </li>
                </ul>
              </div>
            </div>
          </CardContent>
        </Card>

        {/* Your cart is still saved */}
        <div class="mb-8 p-4 bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 rounded-xl">
          <p class="text-sm text-purple-800 dark:text-purple-300">
            <strong>Good news!</strong> Your cart items are still saved. You can try again or continue shopping.
          </p>
        </div>

        {/* Action Buttons */}
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/cart">
            <Button variant="primary" size="lg" client:load>
              Return to Cart
            </Button>
          </a>
          <a href="/services">
            <Button variant="outline" size="lg" client:load>
              Continue Shopping
            </Button>
          </a>
        </div>

        {/* Support Info */}
        <div class="mt-12 p-6 bg-cream-100 dark:bg-charcoal-800 rounded-2xl border border-cream-400 dark:border-charcoal-700">
          <p class="text-sm text-charcoal-700 dark:text-cream-300 mb-2">
            Having trouble? We're here to help
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center text-sm">
            <span class="text-charcoal-600 dark:text-cream-400">
              ðŸ“§ support@mszecomstore.com
            </span>
            <span class="text-charcoal-600 dark:text-cream-400">
              ðŸ“± +92 300 1234567
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
