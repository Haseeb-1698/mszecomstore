---
import Layout from '../../layouts/Layout.astro';
import { Button } from '../../components/ui/Button.tsx';
import { Card, CardContent } from '../../components/ui/Card.tsx';
---

<Layout title="Payment Successful - MSZ Ecom Store">
  <div class="min-h-screen bg-cream-50 dark:bg-charcoal-900 py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        {/* Success Icon */}
        <div class="w-24 h-24 bg-green-500/20 dark:bg-green-400/20 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-12 h-12 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>

        {/* Success Message */}
        <h1 class="text-4xl md:text-5xl font-bold text-charcoal-800 dark:text-cream-100 mb-4">
          Payment Successful!
        </h1>
        <p class="text-xl text-charcoal-700 dark:text-cream-300 mb-8">
          Your payment has been processed successfully. Thank you for your purchase!
        </p>

        {/* Info Card */}
        <Card variant="elevated" className="text-left mb-8">
          <CardContent className="space-y-4 p-6">
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-coral-500 dark:text-coral-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-charcoal-800 dark:text-cream-100 mb-2">What happens next?</h3>
                <ul class="space-y-2 text-sm text-charcoal-700 dark:text-cream-300">
                  <li class="flex items-start gap-2">
                    <span class="text-coral-500 mt-0.5">â€¢</span>
                    <span>A confirmation email has been sent to your inbox</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-coral-500 mt-0.5">â€¢</span>
                    <span>You'll receive your subscription credentials on WhatsApp within 5-10 minutes</span>
                  </li>
                  <li class="flex items-start gap-2">
                    <span class="text-coral-500 mt-0.5">â€¢</span>
                    <span>Our support team is available 24/7 if you need any assistance</span>
                  </li>
                </ul>
              </div>
            </div>
          </CardContent>
        </Card>

        {/* Action Buttons */}
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/dashboard">
            <Button variant="primary" size="lg" client:load>
              View Dashboard
            </Button>
          </a>
          <a href="/services">
            <Button variant="outline" size="lg" client:load>
              Browse More Services
            </Button>
          </a>
        </div>

        {/* Support Info */}
        <div class="mt-12 p-6 bg-cream-100 dark:bg-charcoal-800 rounded-2xl border border-cream-400 dark:border-charcoal-700">
          <p class="text-sm text-charcoal-700 dark:text-cream-300 mb-2">
            Need help? Contact our support team
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center text-sm">
            <span class="text-charcoal-600 dark:text-cream-400">
              ðŸ“§ support@mszecomstore.com
            </span>
            <span class="text-charcoal-600 dark:text-cream-400">
              ðŸ“± +92 300 1234567
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
