<section class="py-24 sm:py-32 bg-cream-100">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center">
      <h2 class="text-3xl sm:text-4xl font-bold tracking-tighter text-charcoal-900">Featured Services</h2>
      <p class="mt-4 max-w-2xl mx-auto text-lg text-charcoal-800">Explore our curated selection of popular subscriptions.</p>
    </div>
    
    <div class="mt-16 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map(service => (
        <div class="bg-cream-50 rounded-2xl p-6 shadow-soft hover:shadow-soft-lg transition-all">
          <div class="flex items-center justify-between">
            <img src={service.logo} alt={service.name} class="h-10" />
            <span class="text-xl font-medium text-charcoal-900">{service.price}</span>
          </div>
          <h3 class="mt-6 text-xl font-medium text-charcoal-900">{service.name}</h3>
          <p class="mt-2 text-charcoal-800">{service.description}</p>
          <button class="mt-6 w-full px-6 py-2 rounded-full border border-cream-400 text-charcoal-800 font-medium hover:bg-cream-100 transition-all">
            Learn More
          </button>
        </div>
      ))}
    </div>
  </div>
</section>