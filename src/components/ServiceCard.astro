---
export interface Props {
  name: string;
  description: string;
  icon: string;
  price: string;
  slug: string;
}

const { name, description, icon, price, slug } = Astro.props;
---

<div class="bg-cream-50 dark:bg-charcoal-800 rounded-2xl p-8 border border-cream-400 dark:border-charcoal-700 shadow-soft-light dark:shadow-soft-dark hover:shadow-soft-light-focus dark:hover:shadow-soft-dark-focus transition-all">
  <img src={icon} alt={name} class="h-12 w-12 mb-6" />
  <h3 class="text-xl font-medium text-charcoal-900 dark:text-white">{name}</h3>
  <p class="mt-2 text-charcoal-800/70 dark:text-gray-400">{description}</p>
  <div class="mt-6 flex items-center justify-between">
    <span class="text-2xl font-medium text-charcoal-900 dark:text-white">{price}</span>
    <a href={`/services/${slug}`} class="px-5 py-2 rounded-full bg-coral-500 text-white font-medium text-sm hover:bg-coral-600 transition-all">
      Details
    </a>
  </div>
</div>
