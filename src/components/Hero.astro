---
import { Search, ArrowRight } from 'lucide-react';
import DiscountBadge from './DiscountBadge.astro';
---

<section class="relative bg-cream-100 dark:bg-charcoal-900 py-24 sm:py-32 overflow-hidden">
  <div class="max-w-7xl mx-auto px-6">
    <div class="relative flex items-center justify-between">
      <!-- Left side decorative element -->
      <div class="hidden lg:block absolute left-0 top-1/2 -translate-y-1/2 -translate-x-8">
        <div class="w-32 h-32 rounded-full bg-gradient-to-br from-coral-400/20 to-purple-400/20 blur-xl"></div>
      </div>
      
      <!-- Main content -->
      <div class="flex-1 text-center relative z-10">
        <h1 class="text-6xl sm:text-8xl max-w-4xl mx-auto font-bold tracking-tighter text-charcoal-900 dark:text-white leading-tight">
          The Subscription <span class="bg-clip-text text-transparent bg-gradient-to-r from-coral-500 to-purple-500">Marketplace</span>
        </h1>
        <p class="mt-6 max-w-xl mx-auto text-lg text-charcoal-800 dark:text-gray-300">
          Discover, manage, and save on your favorite digital subscriptions. All in one place.
        </p>

        <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
          <div class="relative w-full max-w-md">
            <input 
              type="text" 
              placeholder="Search for services like Netflix, Spotify..." 
              class="w-full px-6 py-4 rounded-full border border-cream-400 dark:border-charcoal-700 bg-cream-50 dark:bg-charcoal-800 text-charcoal-900 dark:text-white placeholder-gray-500 focus:ring-2 focus:ring-coral-500 transition-all"
            />
            <div class="absolute right-4 top-1/2 -translate-y-1/2">
              <Search className="w-5 h-5 text-charcoal-800 dark:text-gray-400" />
            </div>
          </div>
          <button class="px-8 py-4 rounded-full bg-coral-500 text-white font-medium hover:bg-coral-600 transition-all flex items-center gap-2">
            <span>Explore</span>
            <ArrowRight className="w-5 h-5" />
          </button>
        </div>
      </div>
      
      <!-- Right side discount badge -->
      <!-- <div class="hidden lg:block absolute right-8 top-1/2 -translate-y-1/2">
        <DiscountBadge />
      </div> -->
      
      <!-- Right side decorative element -->
      <div class="hidden lg:block absolute right-0 top-1/4 translate-x-8">
        <div class="w-24 h-24 rounded-full bg-gradient-to-bl from-purple-400/20 to-coral-400/20 blur-lg"></div>
      </div>
    </div>
  </div>
</section>
